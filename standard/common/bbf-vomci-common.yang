module bbf-vomci-common {
  yang-version 1.1;
  namespace "urn:bbf:yang:bbf-vomci-common";
  prefix bbf-vomci-c;

  import bbf-vomci-types {
    prefix bbf-vomcit;
  }
  import bbf-xpon-types {
    prefix bbf-xpon-types;
  }
  import ietf-yang-types {
    prefix yang;
  }

