  revision 2024-01-19 {
    description
      "Issue 1.
       * Approval Date:    2024-01-19.
       * Publication Date: 2024-01-19.";
    reference
      "TR-477: Cloud CO Enhancement - Access Node Functional
               Disaggregation <https://www.broadband-forum.org/
                               technical/download/TR-477.pdf>";
  }

  typedef session-type {
    type enumeration {
      enum pppoe {
        description
          "The session type is PPPoE.";
      }
      enum ipoe {
        description
          "The session type is IPoE.";
      }
    }
    description
      "This type allows to specify the session type associated to a
       specific IP address.";
  }

  augment "/if:interfaces/if:interface" {
    when "derived-from-or-self (if:type,
          'bbfift:vlan-sub-interface')" {
      description
        "Applies only to VLAN sub-interfaces.";
    }
    description
      "Operations for the D-OLT to set associations between IP
       addresses and MAC addresses on the OLT - ARP (Address
       Resolution Protocol) entries. These ARP entries can be used
       by the OLT to enforce anti-spoofing functionality. Setting the
       aging time is outside of the scope of the VLAN sub-interface
       (VSI). The expiration of the entries is controlled by the relay
       function which snoops control packets.";
    action add-arp-entry {
      description
        "Adds an ARP entry on the device.";
      input {
        leaf address {
          type inet:ip-address;
          mandatory true;
          description
            "The IP address associated with the entry.";
        }
        leaf mac-address {
          type yang:mac-address;
          mandatory true;
          description
            "The MAC address associated with the IP address.";
        }
        leaf session-type {
          type session-type;
          mandatory true;
          description
            "Specified the session type, e.g., PPPoE, IPoE,
             associated with the ARP entry.";
        }
      }
    }
    action delete-arp-entry {
      description
        "Deletes an ARP entry on the device.";
      input {
        leaf address {
          type inet:ip-address;
          mandatory true;
          description
            "The IP address associated with the entry.";
        }
      }
    }
  }
}
