  revision 2025-09-09 {
    description
      "Issue 1.
       * Approval Date:    2025-09-09.
       * Publication Date: 2025-09-09.";
    reference
      "TR-452.4: QED Measurement Formats
                 <https://www.broadband-forum.org/technical/download/
                          TR-452.4.pdf>";
  }

  container samples {
    description
      "Quality attenuation samples with UTC timestamps for all
       observation points.";
    list sample {
      key "id";
      description
        "Quality attenuation samples.";
      leaf id {
        type string;
        description
          "ID of the sample.";
      }
      leaf first-observation-timestamp {
        type yang:date-and-time;
        description
          "Timestamp of when the sample was generated.";
        reference
          "TR-452.1 R-5a";
      }
      leaf packet-size {
        type uint16;
        units "bytes";
        description
          "Packet size.";
      }
      list observation-point {
        key "id";
        description
          "Observation point where the sample was observed.";
        leaf id {
          type string;
          description
            "ID of the observation point.";
        }
        list observation {
          key "id";
          leaf id {
            type string;
            description
              "ID of the observation.";
          }
          description
            "Observation of the sample at this observation point.";
          leaf timestamp {
            type yang:date-and-time;
            description
              "Timestamp when the sample was observed at this
               observation point.";
          }
        }
      }
    }
  }
}
