  revision 2018-10-01 {
    description
      "Amendment 1.
       * Approval Date:    2018-10-01
       * Publication Date: 2018-10-01.";
    reference
      "TR-355a1: YANG Modules for FTTdp Management
                 <https://www.broadband-forum.org/technical/download/
                        TR-355_Amendment-1.pdf>";
  }
  revision 2016-07-18 {
    description
      "Initial revision.
       * Approval Date:    see revision date above.
       * Publication Date: 2016-08-05.";
    reference
      "TR-355: YANG Modules for FTTdp Management
               <https://www.broadband-forum.org/technical/download/
                        TR-355.pdf>";
  }

  augment '/if:interfaces/if:interface/bbf-melt:melt' {
    description
      "Data nodes to support the assignment of MELT configuration.";

    leaf pmd-profile {
      type pmd-profile-ref;
      status deprecated;
      description
        "References a MELT-PMD profile. This method of configuration
         has been deprecated. The 'profile-config' method should
         instead be used.";
    }

    leaf processing-profile {
      if-feature "melt-p";
      type leafref {
        path '/bbf-melt:melt/bbf-melt:profiles/bbf-melt:processing-'
           + 'profile/bbf-melt:name';
      }
      status deprecated;
      description
        "References a MELT-P profile. This method of configuration
         has been deprecated. The 'profile-config' method should
         instead be used.";
    }

    container melt-pmd-control {
      status deprecated;
      description
        "Data nodes to support the MELT-PMD control object";

      uses melt-pmd-control {
        status deprecated;
      }
    }

    choice profile-config {
      default "no-profiles-attached";
      description
        "Provides methods attachment of profiles.";

      case no-profiles-attached {
        leaf no-profiles-attached {
          type empty;
          description
            "If present, indicates that no profiles are attached
             to this line";
        }
      }

      case direct-attachment-mode {
        container direct-attachment-mode {
          description
            "Configuration associated with assigning MELT profiles.";

          leaf pmd-profile {
            type pmd-profile-ref;
            mandatory true;
            description
              "References a MELT-PMD profile.";
          }

          leaf processing-profile {
            if-feature "melt-p";
            type leafref {
              path '/bbf-melt:melt/bbf-melt:profiles/bbf-melt:'
                 + 'processing-profile/bbf-melt:name';
            }
            mandatory true;
            description
              "References a MELT-P profile.";
          }
        }
      }
    }
  }
}
