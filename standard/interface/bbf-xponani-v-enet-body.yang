  revision 2019-02-25 {
    description
      "Initial revision.
       * Approval Date:    2019-02-25.
       * Publication Date: 2019-02-25.";
    reference
      "TR-385: ITU-T PON YANG Modules
               <https://www.broadband-forum.org/technical/download/
                        TR-385.pdf>";
  }

  grouping onu-v-enet-config-data {
    description
      "Config data intended for the onu-v-enet interface.
       This data is brought to the ONU physical device, when
       present, for instance using OMCI on the Management GEM port.";
    leaf ani {
      type if:interface-ref;
      must "derived-from-or-self(/if:interfaces"
         + "/if:interface[if:name = current()]/if:type,"
         + "'bbf-xponift:ani')";
      mandatory true;
      description
        "References the ANI which is the lower-layer interface
         under the ONU-vENET.";
    }
  }

  grouping onu-v-vrefpoint-config-data {
    description
      "Config data intended for the onu-v-vrefpoint interface,
       (sometimes also called 'virtual UNI').
       This data is brought to the ONU physical device, when
       present, for instance using OMCI on the Management GEM port.";
    leaf related-onu {
      type if:interface-ref;
      must "derived-from-or-self(/if:interfaces"
         + "/if:interface[if:name = current()]/if:type,"
         + "'bbf-xponift:ani')";
      mandatory true;
      description
        "References the ONU to which the virtual UNI relates.";
    }
  }

  augment '/if:interfaces/if:interface/bbf-xponani:onu-v-enet' {
    description
      "Configuration of an xPON ONU virtual ENET interface.";
    uses onu-v-enet-config-data;
  }

  augment '/if:interfaces/if:interface/bbf-xponani:onu-v-vrefpoint' {
    description
      "Configuration of an xPON ONU virtual V reference point
       interface per TR-167 (sometimes also called 'virtual UNI' for
       short.";
    uses onu-v-vrefpoint-config-data;
  }
}
