     the TR itself for full legal notices.";

  revision 2019-02-25 {
    description
      "Initial revision.
       * Approval Date:    2019-02-25.
       * Publication Date: 2019-02-25.";
    reference
      "TR-385: ITU-T PON YANG Modules
               <https://www.broadband-forum.org/technical/download/
                        TR-385.pdf>";
  }

  container link-table {
    description
      "Configuration associated with link table entries.";
    list link-table {
      key "from-interface";
      description
        "List of link table entries.";
      leaf from-interface {
        type if:interface-ref;
        description
          "Linkage from this interface to the list 'to-interface'.";
      }
      leaf-list to-interface {
        type if:interface-ref;
        must "current() != ../from-interface" {
          error-message
            "An interface cannot link to itself.";
        }
        description
          "Linkage from 'from-interface' to this list of interfaces.";
      }
    }
  }
}
